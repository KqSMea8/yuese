<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >
    <ImageView
        android:id="@+id/back1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_01168" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_below="@+id/back1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            android:paddingLeft="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/border_01162_5">

            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/phone_input_icon" />

           <!-- <EditText
                android:id="@+id/area_num"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:background="#F1F2F4"
                android:textColor="#555555"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:textSize="15sp" />
-->
            <EditText
                android:id="@+id/phonenum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入手机号"
                android:background="#F1F2F4"
                android:layout_marginLeft="8dp"
                android:textColor="#555555"
                android:inputType="number"
                android:textSize="15sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="5dp"
            >

            <EditText
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_01162_5"
                android:hint="请输入验证码"
                android:layout_toLeftOf="@+id/get_code"
                android:textColor="#555555"
                android:paddingTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_01162_5"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="获取验证码"
                android:textColor="#555555"
                android:textSize="15sp" />
        </RelativeLayout>


      <!--  <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile phone lost?"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#555555"
            />
        <TextView

            android:layout_width="match_parent"
