<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:padding="2dip"
    android:id="@+id/userinfo">
  
            <ImageView 
                android:id="@+id/headpic"
                android:layout_width="100dip"
                android:layout_height="90dip"
                android:background="#FFFFFF"
                android:scaleType="centerCrop"
                />

           <TextView 
               android:id="@+id/nickname"
               android:layout_width="100dip"
               android:layout_height="wrap_content"
               android:text="大白兔奶糖"
               android:textSize="15dip"
               android:shadowDx="5"
               android:shadowColor="#FF000000"
               android:shadowDy="5"
               android:shadowRadius="3"
               android:ellipsize="end"
               android:singleLine="true"
               android:layout_alignBottom="@id/headpic"
               android:layout_margin="5dip"
               android:textColor="#ffffff"
               android:layout_alignLeft="@id/headpic"
               />

    <TextView
        android:id="@+id/zhichi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zhoustar1_01162"
        android:textSize="14dp"
        android:layout_below="@+id/headpic"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:textColor="#ffffff"
        android:text="拨打视频"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/zt_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2.0dip"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:paddingTop="2.0dip">

        <ImageView
            android:id="@+id/iv_zt_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zt_zailiao" />

        <TextView
            android:id="@+id/tv_home_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:text="活跃"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />
    </LinearLayout>

