<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/jianbianse_01152"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/jiantou" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dip"
            android:background="#39363D"
            android:text="\u2000请认真填写您的账户信息,这将直接关系到你的收款"
            android:textColor="#ffffff"
            android:textSize="15dip" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="管理我的提现账户"
            android:textColor="#ffffff"
            android:textSize="16dip" />


    </RelativeLayout>


    <EditText
        android:id="@+id/zhanghu"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/rr"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dip"
        android:background="#F2F2F2"
        android:hint="提现账户(支付宝)"
        android:maxLength="150"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#D4D4D4"
        android:textSize="15dip" />

    <EditText
        android:id="@+id/xingming"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_below="@id/zhanghu"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dip"
        android:background="#F2F2F2"
        android:hint="账户姓名(支付宝)"
        android:maxLength="150"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textColorHint="#D4D4D4"
        android:textSize="15dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:layout_below="@id/xingming"
        android:layout_marginTop="10dip"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/queding"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:layout_centerInParent="true"
            android:background="@drawable/queding" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="20dip" />

    </RelativeLayout>


</RelativeLayout>
