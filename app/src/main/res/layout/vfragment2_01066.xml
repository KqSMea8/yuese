<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/include_one"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:background="#000000"

        >
         <LinearLayout
			android:id="@+id/toubu"
	        android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:background="#ffffff"
	        android:layout_gravity="center"
			android:orientation="horizontal"
	        >

			 <RelativeLayout
				 android:layout_width="0dp"
				 android:layout_height="match_parent"
				 android:layout_weight="1"
				 android:gravity="right|center"
				 >

				 <TextView
					 android:id="@+id/hotvideo"
					 android:layout_width="wrap_content"
					 android:layout_height="45dip"
					 android:text="热门"
					 android:textSize="18dip"
					 android:layout_weight="1"
					 android:textColor="#FF5C5C"
					 android:gravity="center|right"

					 />

			 </RelativeLayout>
			 <RelativeLayout
				 android:layout_width="0dp"
				 android:layout_height="match_parent"
				 android:layout_weight="1"
				 >

				 <TextView
					 android:id="@+id/newvideo"
					 android:layout_width="wrap_content"
					 android:layout_height="45dip"
					 android:text="最新"
					 android:layout_centerInParent="true"
					 android:textSize="18dip"
					 android:textColor="#8C8C8C"
					 android:layout_weight="1"
					 android:gravity="center"
	/>

			 </RelativeLayout>

			 <RelativeLayout
				 android:layout_width="0dp"
				 android:layout_height="match_parent"
				 android:layout_weight="1"
				 >

				 <TextView
					 android:id="@+id/attention"
					 android:layout_width="wrap_content"
					 android:layout_height="45dip"
					 android:text="关注"
					 android:textSize="18dip"
					 android:textColor="#8C8C8C"
					android:gravity="center|left"
					/>



			 </RelativeLayout>

	     </LinearLayout>

		<TextView
			android:id="@+id/uploadvideoyun"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/discover_upload"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"
			android:layout_marginRight="10dip"
			android:visibility="gone"
			/>

	<View
		android:layout_width="30dip"
		android:background="#FF156A"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="2dip"
		android:visibility="gone"
		android:layout_height="2dip" />
    </RelativeLayout>
   <!--<FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_one"
        android:background="#ffffff">-->

	   <android.support.v4.view.ViewPager
		   android:id="@+id/viewpager"
		   android:layout_width="match_parent"
		   android:layout_height="match_parent"
		   android:layout_below="@id/include_one"
		   android:background="#ffffff"/>

    <!--</FrameLayout>-->

</LinearLayout>
