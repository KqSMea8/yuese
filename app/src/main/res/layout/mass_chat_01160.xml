<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:clipToPadding="true"
	android:fitsSystemWindows="true"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/base_header"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#FFFFFF" >
	
        <RelativeLayout 
             android:id="@+id/button_more_moremodify"
              android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="45dp"
            >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginStart="10dp"
            android:src="@drawable/back_01168" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="给粉丝群发私信"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shuo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/base_header"
        android:background="#FF5C5C"
        android:gravity="center|left"
		android:paddingLeft="10dp"
        android:text="有什么想对你粉丝们说的，请写下来吧:"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/shuo"
        android:background="#ECECEC"
        android:gravity="top|left"
        android:hint="请输入内容"
		android:paddingTop="12dp"
		android:paddingLeft="8dp"
        android:maxLength="140"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/zhishu"
        android:layout_below="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="0/140" />

	<TextView
	    android:id="@+id/queding"
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/zhishu"
	    android:background="@drawable/quanxian_bg_red"
	    android:gravity="center_vertical|center_horizontal"
	    android:text="确定群发"
	    android:textColor="#FFFFFF"
	    android:textSize="18sp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    />
	
</RelativeLayout>