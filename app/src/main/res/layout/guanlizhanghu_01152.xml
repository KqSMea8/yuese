<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

	<RelativeLayout
	    android:id="@+id/rr"
		android:layout_width="match_parent"
		android:layout_height="170dip"
		android:background="@drawable/jianbianse_01152"
		android:orientation="vertical">
		
	    <RelativeLayout 
	        android:id="@+id/RR"
	        android:layout_width="match_parent"
			android:layout_height="50dip">

            <ImageView
			android:id="@+id/back"
			android:layout_width="20dip"
			android:layout_height="22dip"
			android:background="@drawable/jiantou"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dip"
			/>
		 </RelativeLayout>
		 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/RR"
			android:background="#39363D"
			android:text="\u2000请认真填写您的账户信息,这将直接关系到你的收款"
			android:textColor="#ffffff"
			android:textSize="15dip"
			android:layout_marginTop="100dip"
			/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="管理我的提现账户"
            android:textColor="#ffffff"
            android:textSize="16dip" />


    </RelativeLayout>

	      
        <EditText 
	        android:id="@+id/zhanghu"
	        android:layout_marginTop="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	         android:layout_below="@id/rr"
	        android:background="#F2F2F2"
	        android:hint="提现账户(支付宝)"
	        android:textSize="15dip"
	        android:textColor="#000000"
	        android:maxLength="150"
			android:paddingLeft="10dp"
	        android:textColorHint="#D4D4D4"
	        android:layout_centerInParent="true"
          /> 
          
        <EditText 
	        android:id="@+id/xingming"
	        android:layout_marginTop="10dip"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	         android:layout_below="@id/zhanghu"
	        android:background="#F2F2F2"
	        android:hint="账户姓名(支付宝)"
	        android:textSize="15dip"
	        android:textColor="#000000"
	        android:maxLength="150"
			android:paddingLeft="10dp"
	        android:textColorHint="#D4D4D4"
	        android:layout_centerInParent="true"
          /> 
        
    <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="70dip"
         android:layout_below="@id/xingming"
         android:layout_marginTop="10dip"
         android:background="#ffffff">
         
         <ImageView 
             android:id="@+id/queding"
             android:layout_width="200dip"
             android:layout_height="50dip"
             android:background="@drawable/queding"
             android:layout_centerInParent="true"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"

			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:gravity="center"
			android:text="提交"
			android:textColor="#ffffff"
			android:textSize="20dip" />
          
     </RelativeLayout>


</RelativeLayout>
