<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#ffffff">
    
        <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff"
        >
		    <ImageView 
		        android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back_01168"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
		        />

			<TextView
				android:id="@+id/textView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:text="填写真实姓名"
				android:textColor="#000000"
				android:textSize="20dip" />

			<ImageView
				android:layout_width="13dip"
				android:layout_height="22dip"
				android:background="#ffffff"
				android:layout_marginRight="15dip"
				android:padding="5dip"
				android:layout_gravity="center"
				/>

      </LinearLayout>
      
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dip"
        android:background="#ffffff"
        >

			<EditText
			android:id="@+id/xinnicheng"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/tianchongyuanjiao_gray"
			android:gravity="center"
			android:layout_marginLeft="50dip"
			android:layout_marginRight="50dip"
			android:hint="请填写真实姓名或公知网名"
			android:textColor="#000000"
			android:textSize="15dip"
			/>
		</LinearLayout>

	<TextView
		android:id="@+id/ascertain"
		android:layout_width="match_parent"
		android:layout_height="40dip"
		android:layout_marginTop="30dip"
		android:layout_marginLeft="90dip"
		android:layout_marginRight="90dip"
		android:gravity="center"
		android:textSize="20dip"
		android:text="确定"
		android:textColor="#FFFFFF"
		android:background="@drawable/border_01162_txt_1"/>


</LinearLayout>
