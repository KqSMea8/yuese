<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baise_yuanjiaobiankuang"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/up" />

        <TextView
            android:layout_width="255dip"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="更新版本"
            android:textColor="#000000"
            android:textSize="20dip" />

        <TextView
            android:layout_width="235dip"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="注：您需要开启存储权限，允许后才可以正常更新使用。"
            android:textColor="@color/video_pay"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#888888" />

        <TextView
            android:id="@+id/gengxinc"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_margin="15dip"
            android:text=""
            android:textSize="15dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#888888" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancleup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/border_01162_8"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/updateon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dip"
                android:layout_weight="1"
                android:background="@drawable/border_01162_3"
                android:gravity="center"
                android:text="更新"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
