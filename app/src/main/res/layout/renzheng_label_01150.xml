<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   <!-- <include layout="@layout/banner_common" />-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_01168"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选择你的形象标签"
            android:textColor="#000000"
            android:textSize="20dip" />

        <ImageView
            android:layout_width="13dip"
            android:layout_height="22dip"
            android:background="#ffffff"
            android:layout_marginRight="15dip"
            android:padding="5dip"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <TextView
        android:textSize="12.0sp"
        android:textColor="#FF5C5C"
        android:layout_gravity="center"
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="仅能选择2个" />
<!--
    <com.example.vliao.interface4.MyGridview
        android:id="@+id/gridview"
        android:layout_marginTop="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/grview"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="300dp">
    </android.support.v7.widget.RecyclerView>


    <TextView
        android:textSize="18.0sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/confirm_tm"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_01162_txt_1"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_marginTop="82.0dip"
        android:text="确定" />

</LinearLayout>
