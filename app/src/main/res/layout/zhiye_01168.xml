<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_01168"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业选择"
            android:textSize="20dip"
            android:layout_centerInParent="true"
            />
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        >
        <TextView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="职业:"
        	android:textSize="15dip"
        />
        <TextView
                android:id="@+id/quanbu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择职业？"
                android:textSize="15dip"
                android:layout_centerVertical="true"
          />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        >
        <TextView
            android:id="@+id/mingxing" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明星"
            android:textColor="#FFFFFF"
            android:background="@drawable/yuanjiao_job_01168"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            />
        <TextView 
            android:id="@+id/zhubo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主播"
            android:textColor="#FFFFFF"
            android:background="@drawable/yuanjiao_job_01168"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:layout_marginLeft="10dip"
            />
        <TextView
            android:id="@+id/lvshi" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="律师"
            android:textColor="#FFFFFF"
            android:background="@drawable/yuanjiao_job_01168"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:layout_marginLeft="10dip"
            />
        <TextView 
            android:id="@+id/xinli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M理咨询师"
            android:textColor="#FFFFFF"
            android:background="@drawable/yuanjiao_job_01168"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="2dip"
            android:paddingBottom="2dip"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>
    <TextView 
        android:id="@+id/wenben1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请上传您的身份证照片(正反两张)"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        >
        <ImageView 
            android:id="@+id/tu1"
            android:layout_width="80dip"
            android:layout_height="100dip"
            android:background="#000000"
            android:layout_marginRight="10dip"
            />
        <ImageView 
            android:id="@+id/tu2"
            android:layout_width="80dip"
            android:layout_height="100dip"
            android:background="#000000"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>
    <TextView 
        android:id="@+id/wenben2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请上传您的《律师职业证》(正反两张)"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        />
    <LinearLayout
        android:id="@+id/yincang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        >
        <ImageView 
            android:id="@+id/tu3"
            android:layout_width="80dip"
            android:layout_height="100dip"
            android:background="#000000"
            android:layout_marginRight="10dip"
            />
        <ImageView 
            android:id="@+id/tu4"
            android:layout_width="80dip"
            android:layout_height="100dip"
            android:background="#000000"
            android:layout_marginLeft="10dip"
            />
    </LinearLayout>
    <TextView 
        android:textSize="18.0sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/queren"
        android:background="@drawable/tianchongyuanjiao_gray"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="80dip"
        android:layout_marginTop="10.0dip"
        android:text="确定" 
        />
    <!-- #E5E5E5 -->
    
    
</LinearLayout>