<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_01168"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绑定手机"
            android:textColor="#000000"
            android:textSize="20dip" />

        <ImageView
            android:layout_width="13dip"
            android:layout_height="22dip"
            android:layout_gravity="center"
            android:layout_marginRight="15dip"
            android:background="#ffffff"
            android:padding="5dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/tianchongyuanjiao_gray1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/shouji" />



        <EditText
            android:id="@+id/phnum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:background="#FAF8F9"
            android:hint="  请输入手机号"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/tianchongyuanjiao_gray1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/yaoshi" />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tianchongyuanjiao_gray1"
            android:hint="请输入密码"

            android:textColor="#CECECE"
            android:textSize="15dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dip"
            android:layout_weight="1"
            android:background="@drawable/tianchongyuanjiao_gray1"
            android:hint="    输入验证码"
            android:textColor="#CECECE"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/huoqu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight="1.5"
            android:background="@drawable/tianchongyuanjiao_gray2"
            android:gravity="center"
            android:textColor="#6A6969"
            android:textSize="15dip"
            android:text="获取验证码" />
    </LinearLayout>

    <TextView
        android:id="@+id/ascertain"
        android:layout_width="200dp"
        android:layout_height="40dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="40dip"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_01162_txt_1"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="绑定"
        android:textSize="20dip" />


</LinearLayout>
