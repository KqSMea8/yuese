<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RR"
        android:layout_width="match_parent"
        android:background="#FF5C5C"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/biaoti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="分享赚钱"
            android:textColor="#ffffff"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/daili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:text="申请代理"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_new" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:background="@drawable/beijing"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dip">

                    <com.net.yuesejiaoyou.redirect.ResolverC.interface4.RoundImageView
                        android:id="@+id/touxiang"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginTop="15dip"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/zhanghu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="15dip"
                        android:layout_toRightOf="@id/touxiang"
                        android:text="提现账户:"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/zhanghu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="15dip"
                        android:layout_toRightOf="@id/zhanghu1"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/xingming1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zhanghu1"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="5dip"
                        android:layout_toRightOf="@id/touxiang"
                        android:text="账户姓名:"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/xingming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/zhanghu"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="5dip"
                        android:layout_toRightOf="@id/xingming1"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/shouji1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xingming1"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="5dip"
                        android:layout_toRightOf="@id/touxiang"
                        android:text="已绑定手机号:"
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/shouji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xingming"
                        android:layout_marginLeft="3dip"
                        android:layout_marginTop="5dip"
                        android:layout_toRightOf="@id/shouji1"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="14dip" />

                </RelativeLayout>

            </RelativeLayout>


            <!--<ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->


            <!--<include
                android:id="@+id/nan2"
                layout="@layout/activity_usershouyi1_01152"
