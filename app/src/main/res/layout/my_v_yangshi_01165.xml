<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EDEBEB" >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dip"
        android:background="@drawable/yuanjiaohuikuang_01165_2"
        android:paddingBottom="3dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="3dip"
        android:text="Januuary 23rd 16:32"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fangjiaojiaobiankuang_01165_2"
        android:padding="2dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/tubiao"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_toEndOf="@id/tubiao"
                android:layout_toRightOf="@id/tubiao" >

                <TextView
                    android:id="@+id/shouzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我的币支出"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/r1"
                android:layout_marginBottom="10dip"
                android:layout_toEndOf="@id/tubiao"
                android:layout_toRightOf="@id/tubiao" >

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2018-02-24"
                    android:textColor="#C2C2C2"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/shouzhi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="6dip"
            android:text="支出金额"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:text="10"
                android:textColor="#F6B6CC"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/pay"
                android:layout_marginLeft="2dip"
                android:text=" 元"
                android:gravity="center"
                android:textColor="#000000"

                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
			android:layout_margin="6dip"
            android:background="#C2C2C2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"					
                android:text="聊天服务:"
                android:textColor="#C2C2C2"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" 10 元"
                android:textColor="#000000"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="5dip"
                android:layout_marginStart="5dip"
                android:background="#ffffff" >
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <com.net.yuesejiaoyou.redirect.ResolverA.interface4.RoundImageView
                    android:id="@+id/touxiang"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="center_vertical"				
                    android:layout_margin="5dp"
                    android:background="@drawable/message_vcoin_icon" />
                <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
	                    android:layout_gravity="center_vertical"
                        android:text="张小邪"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>