<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exit_layout"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="100dp">

    <LinearLayout
        android:id="@+id/head_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuaniaol"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/warn1" />


        <TextView
            android:id="@+id/user_exit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="主播正忙，是否预约"
            android:textColor="#000000"
            android:textSize="20dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#888888" />

        <TextView
            android:id="@+id/exit_jieshao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_exit"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:lines="3"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:text="预约需预支付一分钟的视频消费，若超过12小时主播没有回拨，消费将退回"
            android:textColor="#585858"
            android:textSize="14dip" />

        <View
            android:id="@+id/buttom_xian"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/exit_jieshao"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dip"
            android:background="#888888" />

        <LinearLayout
            android:id="@+id/buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttom_xian"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_tuichu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_01162_8"
                android:gravity="center"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="不预约"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:textSize="18dip"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/exit_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_01162_3"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:text="去预约"
                android:textColor="#FFFFFF"
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
