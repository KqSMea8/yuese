<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    >
    
    <RelativeLayout
        android:id="@+id/headid"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="推广人员"
            android:textColor="#000000"
            android:textSize="20dip"
            android:gravity="center"/>
    </RelativeLayout>
    <ImageView 
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="#FFFFFF"
        android:layout_below="@+id/headid"
        />
    <LinearLayout 
        android:id="@+id/xuanzezong"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/blank1"
        android:background="#FFFFFF"
        >
        <RelativeLayout 
            android:id="@+id/quyu1"
            android:layout_width="0dip"
            android:layout_height="70dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/fenxiao_bak01"
            >
            <TextView 
                android:id="@+id/wenben1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请用户"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:layout_centerHorizontal="true"
                />
            <TextView 
                android:id="@+id/wenben2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共0人"
                android:textColor="#000000"
                android:layout_marginBottom="10dip"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/quyu2"
            android:layout_width="0dip"
            android:layout_height="70dip"
            android:layout_weight="1"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/fenxiao_bak01"
            >
            <TextView 
                android:id="@+id/wenben3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请主播"
                android:textColor="#000000"
                android:layout_marginTop="10dip"
                android:layout_centerHorizontal="true"
                />
            <TextView 
                android:id="@+id/wenben4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共0人"
                android:textColor="#000000"
                android:layout_marginBottom="10dip"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        
    </LinearLayout>
    <ImageView 
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="#FFFFFF"
        android:layout_below="@+id/xuanzezong"
        />
    <View 
        android:id="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#FF5C5C"
        android:layout_below="@+id/blank2"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        />
   <!--  <FrameLayout
		android:id="@+id/cc2"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/xian"
		android:layout_marginTop="5dip"
		>
	</FrameLayout> -->
    
     <ListView
         android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:divider="#F1F0EE"
		android:dividerHeight="1dip"
		android:fadingEdge="none"
        android:layout_below="@+id/xian"
        
        />
   

</RelativeLayout>